<div>
            <h2>{{post.title}}</h2>
            <div>
                Posted by {{post.User.username}}
            </div>
        </div>
        {{#if post.Comments}}
    <section >
        <div >
            <h3>Comments</h3>
        </div>

        <div>
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{User.username}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

     <form >
        <div class="card-header">
            <h3>Add a Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />
            <textarea name="comment-body" class="form-input">Your Feedback Here</textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
</div>